<pyvcp>
  <vbox>
    <hbox>
     <checkbutton>
        <halpin>"enable"</halpin>
        <text>"enable"</text>
        <initval>0</initval> 
      </checkbutton>
      <checkbutton>
        <halpin>"use-pid"</halpin>
        <text>"use-pid"</text>
        <initval>0</initval>
      </checkbutton>
      <label>
        <text>"velocity-nopid:"</text>
      </label>
      <spinbox>
        <halpin>"velocity-req"</halpin>
        <min_>-30</min_>
        <max_>30</max_>
        <initval>0</initval>
        <resolution>0.1</resolution>
        <param_pin>1</param_pin>
      </spinbox>
    </hbox>
    <hbox>
      <label>
        <text>"pos-req:"</text>
      </label>
      <spinbox>
        <halpin>"pos-req"</halpin>
        <min_>-100</min_>
        <max_>100</max_>
        <initval>0</initval>
        <resolution>1</resolution>
        <param_pin>1</param_pin>
      </spinbox>
      <label>
        <text>"pos:"</text>
      </label>
      <number>
        <halpin>"pos"</halpin>
        <format>"3.1f"</format>
      </number>
      <label>
        <text>"velocity:"</text>
      </label>
      <number>
        <halpin>"velocity"</halpin>
        <format>"3.1f"</format>
      </number>
    </hbox>
    <hbox>
      <label>
        <text>"scale:"</text>
      </label>
      <spinbox>
        <halpin>"scale"</halpin>
        <max_>300</max_>
        <initval>1</initval>
        <resolution>1</resolution>
      </spinbox>
      <label>
        <text>"P:"</text>
      </label>
      <spinbox>
        <halpin>"P"</halpin>
        <max_>100</max_>
        <initval>1</initval>
        <resolution>0.1</resolution>
      </spinbox>
      <label>
        <text>"I:"</text>
      </label>
      <spinbox>
        <halpin>"I"</halpin>
        <max_>100</max_>
        <initval>0</initval>
        <resolution>0.1</resolution>
      </spinbox>
      <label>
        <text>"D:"</text>
      </label>
      <spinbox>
        <halpin>"D"</halpin>
        <max_>100</max_>
        <initval>0</initval>
        <resolution>0.1</resolution>
      </spinbox>
    </hbox>
  </vbox>
</pyvcp>
