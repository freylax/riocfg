<pyvcp>
  <vbox>
    <hbox>
     <checkbutton>
        <halpin>"enable"</halpin>
        <text>"enable"</text>
        <initval>0</initval> 
      </checkbutton>
      <checkbutton>
        <halpin>"use-pid"</halpin>
        <text>"use-pid"</text>
        <initval>0</initval>
      </checkbutton>
      <label>
        <text>"velocity-nopid:"</text>
      </label>
      <spinbox>
        <halpin>"velocity-req"</halpin>
        <min_>-100</min_>
        <max_>100</max_>
        <initval>0</initval>
        <format>"3.1f"</format>
        <resolution>0.1</resolution>
        <param_pin>1</param_pin>
      </spinbox>
    </hbox>
    <hbox>
      <label>
        <text>"pos-req:"</text>
      </label>
      <spinbox>
        <halpin>"pos-req"</halpin>
        <min_>-500</min_>
        <max_>500</max_>
        <initval>0</initval>
        <resolution>1</resolution>
        <format>"3.0f"</format>
        <param_pin>1</param_pin>
      </spinbox>
      <label>
        <text>"pos:"</text>
      </label>
      <number>
        <halpin>"pos"</halpin>
        <format>"4.1f"</format>
      </number>
      <label>
        <text>"velocity:"</text>
      </label>
      <number>
        <halpin>"velocity"</halpin>
        <format>"3.1f"</format>
      </number>
    </hbox>
    <hbox>
      <labelframe text = "RIO settings">
        <table>
          <tablerow/>
            <label text="scale:"/>
            <spinbox>
              <halpin>"scale"</halpin>
              <max_>300</max_>
              <initval>1</initval>
              <format>"3.0f"</format>
              <resolution>1</resolution>
            </spinbox>
        </table>
      </labelframe>  
      <labelframe text = "PID settings">
        <table uniform_rows="ab">
          <tablerow/>
            <label text="P:"/>
            <spinbox>
              <halpin>"P"</halpin>
              <max_>100</max_>
              <initval>1</initval>
              <format>"3.1f"</format>
              <resolution>0.1</resolution>
            </spinbox>
          <tablerow/>
            <label text="I:"/>
            <spinbox>
              <halpin>"I"</halpin>
              <max_>100</max_>
              <initval>0</initval>
              <format>"3.1f"</format>
              <resolution>0.1</resolution>
            </spinbox>
          <tablerow/>
            <label text="D:"/>
            <spinbox>
              <halpin>"D"</halpin>
              <max_>100</max_>
              <initval>0</initval>
              <format>"3.1f"</format>
              <resolution>0.1</resolution>
            </spinbox>
          <tablerow/>
            <label text="maxout"/>
            <spinbox>
              <halpin>"maxout"</halpin>
              <max_>100</max_>
              <initval>0</initval>
              <format>"3.1f"</format>
              <resolution>0.1</resolution>
            </spinbox>
        </table>
      </labelframe>
    </hbox>
  </vbox>
</pyvcp>
